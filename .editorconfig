root = true

[*]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.py]
indent_size = 2

[{*.sh, Makefile, *.make}]
end_of_line = lf
indent_style = tab
indent_size = 8

[compile_flags.txt]
end_of_line = lf
insert_final_newline = false

[*.{diff,md}]
trim_trailing_whitespace = false
