
////////////////////////////////////////////////////////////////////////////////
@vs ui_vs
uniform ui_vs_params {
    float t;
};

in vec2 position;
out vec4 color;

void main() {
    gl_Position = vec4(position, -0.1, 1.0);
    color = vec4(t, 0.0, 0.0, 1.0);
}
@end
////////////////////////////////////////////////////////////////////////////////
@fs ui_fs
in vec4 color;
out vec4 frag_color;

void main() {
    frag_color = color;
}
@end
////////////////////////////////////////////////////////////////////////////////
@program ui_prog ui_vs ui_fs
